{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}



{% block body %}
    <div class="example-wrapper">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn-primary btn" type="submit">Search</button>
        {{ form_end(form) }}
    </div>
    <div class="container">
        <h1 class="mt-3 mb-4">Products</h1>
        <div class="row">
            {% for product in products %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img
{#                                src="/uploads//images{{ product.image }}"#}
                             src="{{ asset('/uploads/images' ~ product.image) | imagine_filter('my_thumb')}}"
                             alt="{{ product.name }}" class="card-img-top ">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua</p>
                            <div class="d-flex justify-content-between align-item-center">
                                <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-dark">View details</a>
                                <span class="h5 mt-auto">{{ product.price }} â‚¬</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div>
        {% if previous %}
            <a href="{{ previous }}">Previous</a>
        {% endif %}
        {% if next  %}
            <a href="{{ next }}">Next</a>
        {% endif %}
    </div>
{% endblock %}

